# NOTE: Makefile.in is converted into Makefile by the configure script
# in the parent directory.  Once configure has run, you can recreate
# the Makefile by running just config.status.

# Variables set by configure

VPATH=		@srcdir@
srcdir= 	@srcdir@
bindir= 	@bindir@
prefix=   	@prefix@
exec_prefix=	@exec_prefix@
var_prefix=	@VAR_PREFIX@
DESTDIR=

CC=		@CC@
CHMOD=  	@CHMOD@
INSTALL=	@INSTALL@
PYTHON=		@PYTHON@

DEFS=   	@DEFS@

# Customizable but not set by configure

OPT=		@OPT@
CFLAGS=		@CFLAGS@ $(OPT) $(DEFS)
PACKAGEDIR=	$(prefix)/Mailman
DATADIR=	$(var_prefix)/data
ICONDIR=	$(prefix)/icons
SCRIPTSDIR=	$(prefix)/scripts

SHELL=		/bin/sh
PYTHONLIBDIR=	$(prefix)/pythonlib
SETUPINSTOPTS=	--install-lib $(DESTDIR)$(PYTHONLIBDIR) \
		--install-purelib $(DESTDIR)$(PYTHONLIBDIR) \
		--install-data $(DESTDIR)$(PYTHONLIBDIR)
SETUPCMD=	setup.py --quiet install $(SETUPINSTOPTS)
PKGDIR:= 	$(shell pwd)

EMAILPKG=	email-2.5.5
JACODECSPKG=	JapaneseCodecs-1.4.10
KOCODECSPKG=	KoreanCodecs-2.0.5

PACKAGES= $(EMAILPKG) $(JACODECSPKG) $(KOCODECSPKG)

# Modes for directories and executables created by the install
# process.  Default to group-writable directories but
# user-only-writable for executables.
DIRMODE=	775
EXEMODE=	755
FILEMODE=	644
DATAMODE=	664
INSTALL_PROGRAM=$(INSTALL) -m $(EXEMODE)
DIRSETGID=	$(CHMOD) g+s

PATHSDIRS=	bin cron scripts tests
ICONS=		$(srcdir)/*.jpg $(srcdir)/*.png

# Rules

all:

install: install-other install-packages

install-other:
	$(INSTALL) -m $(FILEMODE) $(ICONS) $(DESTDIR)$(ICONDIR)
	for d in $(PATHSDIRS); \
	do \
	    dir=$(DESTDIR)$(prefix)/$$d; \
	    $(INSTALL) -m $(FILEMODE) paths.py $$dir; \
	done
	$(INSTALL) -m $(EXEMODE) mailman $(DESTDIR)$(SCRIPTSDIR)
	$(INSTALL) -m $(FILEMODE) $(srcdir)/sitelist.cfg $(DESTDIR)$(DATADIR)

install-packages:
	for p in $(PACKAGES); \
	do \
	    gunzip -c $(srcdir)/$$p.tar.gz | (cd $(PKGDIR) ; tar xf -); \
	    (cd $(PKGDIR)/$$p ; umask 022 ; PYTHONPATH=$(PYTHONLIBDIR) CFLAGS="$(CFLAGS)" $(PYTHON) $(SETUPCMD)); \
	done
	find $(DESTDIR)$(PYTHONLIBDIR) -type d \
	    -exec $(CHMOD) $(DIRMODE) {} \; \
	    -exec $(DIRSETGID) {} \;

finish:

clean:

distclean:
	-rm Makefile paths.py mailman
	-rm -rf $(PACKAGES)
